# ========= Database =========
# Use Postgres in production:
#DATABASE_URL=postgresql://postgres:password@localhost/lance_db
# Or SQLite locally:
 DATABASE_URL=sqlite:///./lance.db

# ========= Security =========
JWT_SECRET=change-this-super-secret
SECRET_KEY=change-this-app-secret
APP_SECRET=change-this-otp-secret

# ========= App / Hosting =========
# Public base URL of your backend (must match your Cloudflare DNS + tunnel)
APP_BASE_URL=https://api.primustech.in

# CORS: keep false in prod; set true temporarily for dev/preview
ALLOW_ALL_CORS=true

# ========= SMTP (emails) =========
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=no-reply@primustech.in
SMTP_TLS=1
SMTP_SSL=0

# ========= OAuth =========
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# ========= Payments =========
STRIPE_SECRET=your-stripe-secret-key
STRIPE_CURRENCY=usd
STRIPE_SUCCESS_URL=https://primustech.in/payment/success
STRIPE_CANCEL_URL=https://primustech.in/payment/cancel

RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_CURRENCY=INR
RAZORPAY_SUCCESS_URL=https://primustech.in/razorpay/success

# ========= Firebase (optional) =========
FIREBASE_CREDENTIALS_JSON=C:/path/to/firebase-credentials.json

# ========= Redis (optional) =========
REDIS_URL=redis://127.0.0.1:6379/0

# ========= OTP Limits =========
OTP_TTL_SEC=300
RESEND_COOLDOWN_SEC=30
MAX_SENDS_PER_HOUR=5
MAX_ATTEMPTS=5

# ========= Dev/Preview helpers (uncomment when needed) =========
#ALLOW_ALL_CORS=true
# APP_BASE_URL=http://localhost:8000