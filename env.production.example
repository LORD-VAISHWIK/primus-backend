# =============================================================================
# PRIMUS BACKEND - PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://primus:your_secure_password@localhost:5432/primus_db

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your_super_secret_jwt_key_here_generate_with_secrets_token_urlsafe_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Add your frontend domains here
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://admin.yourdomain.com

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://127.0.0.1:6379/0

# =============================================================================
# EMAIL/SMTP CONFIGURATION
# =============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Primus Gaming Center

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Primus Gaming Platform
APP_VERSION=1.0.0
APP_BASE_URL=https://yourdomain.com
API_BASE_URL=https://yourdomain.com/api
ADMIN_BASE_URL=https://admin.yourdomain.com

# Environment
ENVIRONMENT=production
DEBUG=False

# =============================================================================
# FIREBASE CONFIGURATION (Optional)
# =============================================================================
FIREBASE_CREDENTIALS_JSON={}
FIREBASE_PROJECT_ID=your-firebase-project-id

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================

# Stripe
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Razorpay
RAZORPAY_KEY_ID=rzp_live_your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_SUCCESS_URL=https://yourdomain.com/payment/success
RAZORPAY_CANCEL_URL=https://yourdomain.com/payment/cancel

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
UPLOAD_DIR=/var/www/primus/uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/primus/backend.log

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_TIMEOUT_MINUTES=30
MAX_SESSIONS_PER_USER=5

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_DIR=/var/backups/primus
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=True
AUTO_BACKUP_HOUR=2  # 2 AM

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_ENABLED=True
METRICS_ENABLED=True
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000

# =============================================================================
# SOCIAL AUTH (Optional)
# =============================================================================
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
PUSH_NOTIFICATIONS_ENABLED=True
EMAIL_NOTIFICATIONS_ENABLED=True

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_REGISTRATION=True
ENABLE_PASSWORD_RESET=True
ENABLE_EMAIL_VERIFICATION=True
ENABLE_SOCIAL_LOGIN=True
ENABLE_PAYMENT_PROCESSING=True
ENABLE_FILE_UPLOADS=True

# =============================================================================
# SECURITY HEADERS
# =============================================================================
SECURE_HEADERS_ENABLED=True
HTTPS_REDIRECT=True
HSTS_MAX_AGE=31536000

# =============================================================================
# API DOCUMENTATION
# =============================================================================
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json
